<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context="org.istsos.androiddemo.MainActivity"
    android:gravity="fill">

    <include
        android:id="@+id/toolbar"
        android:layout="@layout/toolbar"
        android:elevation="5dp">
    </include>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/load_services"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/service_loader"
        android:layout_marginBottom="5dp"
        android:id="@+id/service_loader"
        android:onClick="loadServicesInApp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/services"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/available_services"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:entries="@array/servicesArrayAdapter"
        style="@android:style/Widget.Holo.Light.Spinner"
        />


</LinearLayout>
